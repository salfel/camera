#!/bin/bash

WIDTH=1920
HEIGHT=1080
FPS=25
OUTDIR=/dev/shm/hls
OUTFILE=movie.m3u8
# Number of items in playlist
# Option -hls_flags delete_segments, removes segments no longer in the playlist.
# https://stackoverflow.com/a/28178014
HLS_LIST_SIZE=20
LOGLEVEL=1


if [ ! -d $OUTDIR ];then
	  echo "$OUTDIR not found, creating"
	    mkdir $OUTDIR
    else
	      echo "Cleaning $OUTDIR"
	        rm -rf $OUTDIR/*
fi


echo "Starting stream ..."
raspivid -t 0 -w $WIDTH -h $HEIGHT -fps $FPS -o - | \
	 ffmpeg -nostats -loglevel $LOGLEVEL -i - \
	  -vcodec copy -f hls -hls_time 1 -hls_list_size $HLS_LIST_SIZE -hls_flags delete_segments $OUTDIR/$OUTFILE
echo "Stopping stream ..."
